#!/bin/bash

set -e
set -o pipefail

SCRIPT_DIRECTORY=$(dirname "${BASH_SOURCE}")

VIRTUAL_TABLES_URL="${1}/api/tables"

VIRTUAL_TABLE_URL_PREFIX="${1}/api/table/"

echo "Getting virtual table URLs"

VIRTUAL_TABLE_URLS=$(for i in {1..15}; do curl --insecure --fail "${VIRTUAL_TABLES_URL}" | jq -r 'to_entries | map(select(select((.value.meta.archived or .value.meta.enabledDestinations == []) | not))) | from_entries | keys | .[]' | sed -e "s#^#${VIRTUAL_TABLE_URL_PREFIX}#" && break || sleep 5; done)

echo "$VIRTUAL_TABLE_URLS"

echo "Running process for each virtual table"

echo "$VIRTUAL_TABLE_URLS" | xargs -L1 $SCRIPT_DIRECTORY/transfer-snowflake $1
